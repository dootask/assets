# ===========================================
# 企业固定资产管理系统 - 生产环境配置
# ===========================================

# 🚀 应用基础配置
NODE_ENV=production
APP_NAME="企业固定资产管理系统"
APP_VERSION=1.0.0

# 🔌 服务端口配置
APP_PORT=3000
GO_SERVICE_PORT=8000

# 🗄️ 数据库配置 (SQLite)
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/assets.db

# 📁 文件上传配置
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=10485760         # 10MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xlsx,xls

# 📊 生产环境配置
LOG_LEVEL=info
ENABLE_DEBUG=false
ENABLE_SWAGGER=false

# 🌐 前端配置
NEXT_PUBLIC_BASE_PATH=/apps/asset-management
NEXT_PUBLIC_API_BASE_URL=/apps/asset-management/api
NEXT_OUTPUT_MODE=standalone

# 🔒 安全配置
JWT_SECRET=your-jwt-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 📈 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
STATIC_FILE_CACHE_DURATION=86400  # 24小时